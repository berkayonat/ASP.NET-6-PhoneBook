@model PhoneBook.Models.ViewModels.PersonViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Person</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled  class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled  class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" disabled  class="form-control" />
        </div>
        <a asp-controller="Person" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>

