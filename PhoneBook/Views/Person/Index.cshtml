@using PhoneBook.Models.ViewModels
@model IEnumerable<PersonViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Person List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Person" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp; Create New Person
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                     Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Address
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Person" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Person" asp-action="Delete" asp-route-id="@obj.Id" 
                            onclick="return confirm('Are you sure?')" class="btn btn-danger mx-2"> 
                            <i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

